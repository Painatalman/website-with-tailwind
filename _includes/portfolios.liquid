<h2 class="text-xl mb-1">{{ navItems.portfolio.label }}</h2>
<ul id="portfolio-category-selector" class="mb-1 flex flex-col lg:flex-row justify-between items-center">
  <li class="portfolio-filter is-active">
    <button data-portfolio-toggle="all">{{ navItems.portfolio.labelAll }}</button>
  </li>
  {% for this in portfolioCategories %}
    <li class="portfolio-filter">
      <button 
        data-portfolio-toggle="{{ this.slug }}"
        {% if this.subfilters %} data-portfolio-subfilter-list="portfolio-subfilter-{{ this.slug }}" {% endif%}
      >
        {{ this.label }}
      </button>
      {% if this.subfilters %}
        <ul class="portfolio-filter__subfilters" id="portfolio-subfilter-{{ this.slug }}">
          {% for subfilter in this.subfilters %}
            <li>
              <button
                class="portfolio-filter__subfilter"
                data-portfolio-toggle="{{ subfilter.slug }}"
              >
                {{ subfilter.label }}
              </button>
            </li>
          {% endfor %}
        </ul>
      {% endif %}
    </li>
  {% endfor %}
</ul>
<ul id="portfolios" class="grid grid-cols-3 grid-rows-2 gap-px">    
  {% for this in portfolios %}
    <li 
      class="relative h-0 pb-full" 
      data-category="{{ this.category }}"
      data-full-picture="{{ this.fullPicture }}"
      data-description="{{ this.fullPicture }}"
      data-toggle-lightbox
      data-portfolio
    >
      <a 
        href="{{ this.fullPicture }}"
      >
        <img
          data-portfolio-thumbnail
          src="{{ this.thumbnail }}"
          alt="{{ this.description }}"
          class="absolute h-full w-full object-cover"
        />
      </a>
    </li>
  {% endfor %}
</ul>
